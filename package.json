		"build:delRev": "gulp delRev",
		"build:image": "gulp build:page:image && gulp build:static:image",
		"build:css": "gulp build:less && gulp build:static:css && gulp build:css",
		"build:javascript": "gulp prod-js && gulp build:static:js && gulp build:static:js-min",
		"build:md5": "gulp delImages && gulp build:static:image:no-hash && gulp build:page:image:no-hash &&  gulp build:hash",
